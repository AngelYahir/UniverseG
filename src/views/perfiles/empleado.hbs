<section>
  <div class="container p-4 mt-4">
    <div class="row">
      {{>perfiles/mEmployee}}
      <fieldset disabled>
        <div class="md-8 mx-auto dark">
          <div class="card text-center text-white bg-dark mb-3">
            <div class="card-header">
              <h1 class="h4">
                Perfil de empleado
              </h1>
            </div>
            <img class="rounded-circle mx-auto d-block logo " src="/images/profile.png" alt="Logo">
            <div class="card-body">
              <div class="row">
                <div class="col">
                  <label for="disabledTextInput" class="form-label">Nombre</label>
                  <input type="text" class="form-control" id="disabledTextInput" placeholder="{{employee.name}}">
                </div>
                <div class="col">
                  <label for="disabledTextInput" class="form-label">Apellido</label>
                  <input type="text" class="form-control" id="disabledTextInput" placeholder="{{employee.lastname}}">
                </div>
                <div class="col mb-3">
                  <label for="disabledTextInput" class="form-label">Correo Electronico</label>
                  <input type="text" class="form-control" id="disabledTextInput" placeholder="{{employee.email}}">
                </div>
              </div>
            </div>
          </div>
        </div>
      </fieldset>
    </div>
  </div>
</section>
