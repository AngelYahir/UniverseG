<section>
  <div class="container p-4 mt-4 md-8">
    <div class="row">
      {{#if pass.admin}}
        {{>perfiles/mAdmin}}
      {{else}}
        {{>perfiles/mEmployee}}
      {{/if}}
      <div class="md-8" style="width: 700px;">
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th scope="col">Product</th>
              <th scope="col">Genre</th>
              <th scope="col">Price</th>
              <th scope="col">View</th>
              <th scope="col">Edit</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            {{#each productoz}}
            <tr>
              <th scope="row">{{product}}</th>
              <td>{{genre}}</td>
              <td>{{price}}</td>
              <td> <a class="btn btn-outline-info" href="/tienda/producto/{{_id}}"><i class="fas fa-external-link-alt"></i></i></a></td>
              <td> <a class="btn btn-outline-primary" href="/list/productos/editproducto/{{_id}}"><i class="fas fa-pen"></i></a></td>
              <td> <a class="btn btn-outline-danger" href="/list/productos/delproducto/{{_id}}"><i class="fas fa-trash"></i></a></td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>

{{>footer}}
