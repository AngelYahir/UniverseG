<section>
    <div class="container p-4 mt-4">
        <div class="row">
            {{#if pass4.admin}}
                {{>perfiles/mAdmin}}
            {{else if pass4.employee}}
                {{>perfiles/mEmployee}}
            {{else if pass4.editor}}
                {{>perfiles/meditor}}
            {{/if}}
            <div class="card text-white bg-dark md-8" style="width: 700px;">
                <div class="card-header text-center">
                    <h1 class="h4">New news</h1>
                </div>
                <div class="card-body">
                    <form action="/add/noticias" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col">
                                 <label for="" class="control-label">Title</label>
                                <input type="text" class="form-control"  name="titulo" style="border: 0; border-bottom: 1px solid #8C30F5; background-color: #373A3C;">
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label class="control-label">Topic</label>
                                        <div class="form-group">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">$</span>
                                                </div>
                                                <input type="text" name="tema" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ">
                                <label  class="control-label">Description</label>
                                <textarea name="resumen" class="form-control" rows="3"></textarea>
                            </div>
                            <div class="form-group ">
                                <label  class="control-label">Content</label>
                                <textarea name="contenido" class="form-control" rows="8"></textarea>
                            </div>
                            <div class="row">
                                <div class="form-group ml-3">
                                    <label for="exampleFormControlFile1">Image</label>
                                    <input type="file" name="image" class="form-control-file" id="exampleFormControlFile1">
                                </div>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col"></div>
                            <div class="col-6">
                                <div class="form-group mt-3 ml-3" >
                                    <input type="submit" class="btn btn-outline-info btn-block" value="Post" style="width: 250px;"> 
                                </div>
                            </div>
                            <div class="col"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

{{>footer}}