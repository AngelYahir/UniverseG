<section>
    <div class="container p-4 mt-4">
        <div class="row">
            {{#if pass5.admin}}
                {{>perfiles/mAdmin}}
            {{else if pass5.employee}}
                {{>perfiles/mEmployee}}
            {{else if pass5.editor}}
                {{>perfiles/meditor}}
            {{/if}}
            <div class="card text-white bg-dark md-8" style="width: 700px;">
                <div class="card-header text-center">
                    <h1 class="h4">Nueva noticia</h1>
                </div>
                <div class="card-body">
                    <form action="/edit/noticia/{{ednoticia._id}}" method="POST">
                        <div class="row">
                            <div class="col">
                                 <label for="" class="control-label">Titulo</label>
                                <input type="text" value="{{ednoticia.titulo}}" class="form-control" placeholder="Titulo de la noticia" name="titulo" style="border: 0; border-bottom: 1px solid #8C30F5; background-color: #373A3C;">
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label class="control-label">Tema</label>
                                        <div class="form-group">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">$</span>
                                                </div>
                                                <input type="text" name="tema" value="{{ednoticia.tema}}" class="form-control">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group ">
                                <label  class="control-label">Desarrollo</label>
                                <textarea name="contenido" class="form-control" rows="3">{{ednoticia.resumen}}</textarea>
                            </div>
                            <div class="form-group ">
                                <label  class="control-label">Desarrollo</label>
                                <textarea name="contenido" class="form-control" rows="8">{{ednoticia.contenido}}</textarea>
                            </div>
                            <div class="row">
                                <div class="form-group ml-3">
                                    <label for="exampleFormControlFile1">Editor</label>
                                    <input type="text" class="form-control-file" id="exampleFormControlFile1" value="{{ednoticia.editor}}">
                                </div>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col"></div>
                            <div class="col-6">
                                <div class="form-group mt-3 ml-3" >
                                    <input type="submit" class="btn btn-outline-info btn-block" value="Actualizar" style="width: 250px;"> 
                                </div>
                            </div>
                            <div class="col"></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

{{>footer}}